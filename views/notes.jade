block variables
  title = "ES Discuss - Notes " + date

extends layout

block head
  link(href='https://yandex.st/highlightjs/7.3/styles/default.min.css', rel='stylesheet')

block navsections
  li
    a(href='/1') Topics
  li.active
    a(href='/notes') Notes
  li
    a(href='/about') About

block navigation
  ul.nav.pull-right
    li.disabled
      a(href='javascript:void') #{date}

block content
  .row
    .span12
      .notes!= content
