extends layout

block navsections
  li
    a(href='/1') Topics
  li.active
    a(href='/notes') Notes

block content
  .row
    .span1.profile-image.hidden-phone
      a(href='http://twitter.com/rwaldron')
        img(src='https://secure.gravatar.com/avatar/36c697d974542aadaee06a0f39cb1437?s=100&d=mm')
    .span11
      p
        | These are notes are the official TC39 meeting minutes taken by 
        a(href='http://twitter.com/rwaldron') @rwldrn
        | .  They are copied from 
        a(href='https://github.com/rwldrn/tc39-notes/') this
        |  GitHub repository.  It's hoped that they will offer a fairly readable, useful insight into how the committee works.
  - months = months.sort(function (a, b) { return a.month < b.month ? 1 : -1 })
  for month in months
    .row
      .span1
      .span11.topic-title
        .well.well-small
          h4= month.month
    .row
      .span1
      .span11
        ul
          - var days = month.days.sort()
          for day in days
            li
              a(href='/notes/' + month.month + '-' + day)= month.month + '-' + day